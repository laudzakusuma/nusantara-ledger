# Nusantara Ledger Configuration
# Copy to .env and customize for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite for development (easy setup)
DATABASE_URL=sqlite:///./nusantara.db

# =============================================================================
# SUI BLOCKCHAIN CONFIGURATION
# =============================================================================
# SUI Network RPC URL (using devnet for free testing)
SUI_RPC_URL=https://fullnode.devnet.sui.io:443

# SUI Private Key (will be generated during setup)
SUI_PRIVATE_KEY=your_private_key_here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_TYPE=file
FILE_QUEUE_PATH=./queue

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI_MODEL_PATH=./models
ENABLE_NLP_ANALYSIS=true
ENABLE_ANOMALY_DETECTION=true
ANOMALY_THRESHOLD=0.7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production
SALT_SECRET=dev_salt_secret_change_in_production

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,csv,xlsx
